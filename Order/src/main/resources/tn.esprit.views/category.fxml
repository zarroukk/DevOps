<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.CategoryController">
    <ListView fx:id="listViewCategories" prefHeight="300" prefWidth="400"/>
    <Button fx:id="btnGoToProduct" text="Go to Products" onAction="#handleGoToProduct"/>
    <Button fx:id="btnAddCategory" text="Add Category" onAction="#handleAddCategory"/>
    <Button fx:id="btnDeleteCategory" text="Delete Category" onAction="#handleDeleteCategory"/>
</VBox>

